# Django Settings
SECRET_KEY=change-this-in-production-use-at-least-50-characters
DEBUG=False
DJANGO_SETTINGS_MODULE=proyecto.settings.prod

# Allowed Hosts & CORS (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.railway.app
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:5173
CSRF_TRUSTED_ORIGINS=https://your-domain.railway.app,https://your-frontend.vercel.app

# Backend URL (for absolute URLs)
BACKEND_URL=https://your-domain.railway.app

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (for caching & Celery)
REDIS_URL=redis://host:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Cloudinary (Cloud Storage)
USE_CLOUDINARY=true
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Microsoft Graph API (Email automation)
GRAPH_TENANT_ID=your-tenant-id
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_SHARED_MAILBOX=dteproveedores@yourcompany.com

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourcompany.com

# Gunicorn Configuration (OPTIMIZED FOR RAILWAY)
# CRITICAL: These settings reduce memory usage from 5GB to ~1GB
GUNICORN_WORKERS=2
GUNICORN_WORKER_CLASS=gevent
GUNICORN_TIMEOUT=120
GUNICORN_MAX_REQUESTS=500
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_WORKER_CONNECTIONS=500

# Logging
LOG_LEVEL=WARNING

# Celery Configuration
EMAIL_PROCESSING_INTERVAL_MINUTES=15
MAX_ATTACHMENT_SIZE_MB=15

# Superuser Auto-creation (optional)
DJANGO_AUTOCREATE_SUPERUSER=false
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=change-this
DJANGO_SUPERUSER_EMAIL=admin@yourcompany.com

# Python Configuration
PYTHONUNBUFFERED=1
